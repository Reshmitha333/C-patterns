#include<stdio.h>
int main() {
  int i,j,n,k=1,l,k2=1;
  scanf("%d",&n);
  for(i=1;i<=n;i++)
  {
      for(j=1;j<=n-i;j++)
      {
          printf(" ");
      }
      for(j=1;j<=k;j++)
      {
          printf("*");
      }
      k=k+2;
      l=k-4;
      printf("\n");
  }
  for(i=n+1;i<=2*n-1;i++)
  {
      for(j=1;j<i-n+1;j++)
      {
          printf(" ");
      }
      for(j=1;j<=l;j++)
      {
          printf("*");
      }
      l=l-2;
      printf("\n");
  }
  for(i=1;i<=n/2;i++)
  {
       k2=k2+2;
      for(j=1;j<=n-i-1;j++)
      {
          printf(" ");
      }
      for(j=1;j<=k2;j++)
      {
          printf("*");
      }
     
      printf("\n");
  }
}
